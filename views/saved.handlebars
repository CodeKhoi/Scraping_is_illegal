<!--Saved Articles Page-->

<div class='landing'></div>
<div class='container'>  
  <div class='header'>SAVED ARTICLES</div>
</div>

<div class="container">
  <div class="col-md-12">
    {{#if article}}
      {{#each article}}
        <div class="panel">
          <div class="panel-heading">
            <h4 class='panel-title'>{{this.title}}</h4>
          </div>
          <div class="panel-body">
              <p>{{this.summary}}</p>
              <hr>
              <a href={{this.link}} target="_blank">{{this.link}}</a>
              <br><br>
              <button type="button" class="btn addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
              <button type="button" class="btn delete" data-id={{this._id}}>Delete</button>
          </div>
        </div>
        {{/each}}
      {{else}}
      <div class="panel">
        <div class="panel-body">
            <h4>You have no saved articles.</h4>
        </div>
      </div>
      {{/if}}
  </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}